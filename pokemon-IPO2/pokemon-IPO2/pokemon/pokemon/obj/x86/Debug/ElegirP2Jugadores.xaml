<UserControl
    x:Class="pokemon.ElegirP2Jugadores"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pokemon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="#FFDC4D4D">
        <Grid.RowDefinitions>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="52.5*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="52.5*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="18*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="52.5*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="52.5*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="52.5*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.RowSpan="12" Source="/Imágenes/estadio.jpg" Grid.ColumnSpan="13" Stretch="Fill"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="JUGADOR 1" VerticalAlignment="Center" FontWeight="Bold" Grid.ColumnSpan="3" Margin="0,0,0,0"/>
        <TextBlock Grid.Column="8" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="ASH KETCHUM" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,0,0" Grid.ColumnSpan="3"/>



        <Image x:ConnectionId='2' x:Name="dragonite1" Grid.Column="2" Margin="0,0,0,0" Grid.Row="4" VerticalAlignment="Center" Source="/fotoPokemon/Dragonite.png" Stretch="Fill"                                             />
        <Image x:ConnectionId='3' x:Name="jigglypuff1" Grid.Column="2" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" Source="/fotoPokemon/jigglypuff.png" Stretch="Fill"                                              />
        <Image x:ConnectionId='4' x:Name="gardevoir1" Grid.Column="4" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Stretch="Fill" Source="/fotoPokemon/gardevoir.png"                                             />
        <Image x:ConnectionId='5' x:Name="zapdos1" Grid.Column="4" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" Source="/fotoPokemon/Zapdos.png" Stretch="Fill"                                          />
        <Image Grid.Column="6" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Top" Source="/Imágenes/competencia.png" Stretch="Fill" Margin="0,39,0,39" Grid.RowSpan="3"/>
        <TextBlock x:ConnectionId='6' x:Name="pokemon1" Grid.Column="2" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="8" TextWrapping="Wrap" Text="Selecciona un pokemon" VerticalAlignment="Center" FontWeight="Bold"/>
        <Button x:ConnectionId='7' x:Name="aceptar" Grid.Column="2" Content="ACEPTAR" Grid.ColumnSpan="3" Margin="0,0,0,0" Grid.Row="10" FontSize="14" FocusVisualPrimaryBrush="#FF080000" HorizontalAlignment="Center" Foreground="Black" Background="White"                       Visibility="Collapsed"/>

        <TextBlock x:ConnectionId='8' x:Name="pokemon2" Grid.Column="8" HorizontalAlignment="Center" Grid.Row="8" TextWrapping="Wrap" Text="Selecciona un pokemon" VerticalAlignment="Center" FontWeight="Bold" Grid.ColumnSpan="3" Margin="0,0,0,0"/>
        <Image x:ConnectionId='9' x:Name="pokeball2" Grid.Column="8" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="0,0,0,0" Grid.RowSpan="3" Grid.Row="4" VerticalAlignment="Top" Source="/Imágenes/pokebola.png" Stretch="Fill" Visibility="Visible"/>
        <Image x:ConnectionId='10' x:Name="atras" HorizontalAlignment="Right" Margin="15,15,0,0" VerticalAlignment="Bottom" Source="/Imágenes/flecha-hacia-atras.png" Stretch="Fill" NineGrid="10,0,0,0" RenderTransformOrigin="3.14,2.128"                                        />


    </Grid>
</UserControl>


<UserControl
    x:Class="pokemon.Pokedex2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pokemon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' Name="Pokedex">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="122*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="96*"/>
            <RowDefinition Height="58*"/>
        </Grid.RowDefinitions>
        <Image Source="/src/fondoPokedex.jpg" Stretch="Fill" Grid.RowSpan="6" Grid.ColumnSpan="5" Margin="0,0,0,0"/>
        <Image Source="/src/pokedex.png" Stretch="Fill" Grid.Row="1" Grid.Column="2" Margin="0,0,0,0"/>
        <Button x:ConnectionId='3' VerticalAlignment="Stretch" Grid.Column="1" Margin="10,10,10,10" Grid.Row="2" HorizontalAlignment="Stretch"                     >
            <StackPanel Padding="0,0,0,0">
                <Image Source="src/Gardevoir.png" Margin="10,10,10,0" Height="125" Width="125"/>
                <TextBlock Text="GARDEVOIR" TextWrapping="Wrap" VerticalAlignment="Bottom" FocusVisualPrimaryBrush="Black" Foreground="Black" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
            </StackPanel>
        </Button>
        <StackPanel x:ConnectionId='4' x:Name="Stack1" Grid.Column="1" Grid.Row="2" Margin="4,10,3,4" Grid.RowSpan="2"/>
        <Button x:ConnectionId='5' x:Name="Dragonite" VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Stretch"                        Margin="80,10,80,10">
            <StackPanel Padding="0,0,0,0">
                <Image Source="/src/Dragonite.png" Margin="10,10,10,0" Height="125" Width="125"/>
                <TextBlock Text="DRAGONITE" TextWrapping="Wrap" VerticalAlignment="Bottom" FocusVisualPrimaryBrush="Black" Foreground="Black" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button x:ConnectionId='6' x:Name="Jiggly" VerticalAlignment="Stretch" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Stretch"                     Margin="40,10,40,10">
            <StackPanel Padding="0,0,0,0">
                <Image Source="/src/Jigglypuff_2.png" Margin="10,10,10,0" Height="125" Width="125"/>
                <TextBlock Text="JIGGLYPUFF" TextWrapping="Wrap" VerticalAlignment="Bottom" FocusVisualPrimaryBrush="Black" Foreground="Black" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button x:ConnectionId='7' x:Name="Zapdos" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Stretch"                     Margin="10,10,10,10">
            <StackPanel Padding="0,0,0,0">
                <Image Source="/src/Zapdos.png" Margin="10,10,10,0" Height="125" Width="125"/>
                <TextBlock Text="ZAPDOS" TextWrapping="Wrap" VerticalAlignment="Bottom" FocusVisualPrimaryBrush="Black" Foreground="Black" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button x:ConnectionId='8' x:Name="Charizard" VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="4" HorizontalAlignment="Stretch"                        Margin="80,10,80,10">
            <StackPanel Padding="0,0,0,0">
                <Image Source="/src/Charizard.png" Margin="10,10,10,0" Height="125" Width="125"/>
                <TextBlock Text="CHARIZARD" TextWrapping="Wrap" VerticalAlignment="Bottom" FocusVisualPrimaryBrush="Black" Foreground="Black" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
            </StackPanel>
        </Button>

        <Button x:ConnectionId='9' x:Name="Onix" VerticalAlignment="Stretch" Grid.Column="3" Grid.Row="4"  HorizontalAlignment="Stretch"                   Margin="40,10,40,10">
            <StackPanel Padding="0,0,0,0">
                <Image Source="/src/Onix.png" Margin="10,10,10,0" Height="125" Width="125"/>
                <TextBlock Text="ONIX" TextWrapping="Wrap" VerticalAlignment="Bottom" FocusVisualPrimaryBrush="Black" Foreground="Black" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
            </StackPanel>
        </Button>

    </Grid>
</UserControl>


<UserControl
    x:Class="pokemon.GardevoirData"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pokemon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' Name="GridNuevo">
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="91*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="191*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="106*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="94*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="129*"/>
            <ColumnDefinition Width="228*"/>
            <ColumnDefinition Width="176*"/>
            <ColumnDefinition Width="209*"/>
            <ColumnDefinition Width="66*"/>
            <ColumnDefinition Width="215*"/>
            <ColumnDefinition Width="238*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="src/LAYOUT.png" Stretch="Fill"></ImageBrush>
        </Grid.Background>
        <Image x:ConnectionId='3' x:Name="foto" Grid.ColumnSpan="11" Margin="0,0,0,0" Grid.RowSpan="12" Source="/src/LAYOUT.png" Stretch="Fill" />
        <Image x:ConnectionId='4' x:Name="imagPoke" Grid.Column="4" Grid.ColumnSpan="2" Margin="0,0,0,0" Grid.RowSpan="3" Grid.Row="4" Stretch="Fill" Source="{Binding Path=imagen}"/>
        <TextBlock x:ConnectionId='5' x:Name="t_desc" Grid.Column="7" Margin="10,0,9,0" Grid.RowSpan="2" TextWrapping="Wrap" Text="TextBlock" Grid.ColumnSpan="3" Grid.Row="3" TextAlignment="Justify"/>
        <TextBlock x:ConnectionId='6' x:Name="t_nombre" Grid.Column="3" Grid.RowSpan="2" Grid.Row="9" TextWrapping="NoWrap" Text="TextBlock" TextAlignment="Center" FontStretch="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,0,0"/>
        <TextBlock x:ConnectionId='7' x:Name="t_tipo" Grid.Column="7" Margin="0,0,0,0" Grid.Row="6" TextWrapping="Wrap" Text="TextBlock" Foreground="Black" TextAlignment="Left" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:ConnectionId='8' x:Name="t_altura" Grid.Column="7" Grid.Row="8" TextWrapping="Wrap" Text="TextBlock" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock.RenderTransform>
                <CompositeTransform ScaleX="1"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:ConnectionId='9' x:Name="t_peso" Grid.Column="9" Grid.Row="8" TextWrapping="Wrap" Text="TextBlock" TextAlignment="Center" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image x:ConnectionId='10' Grid.Column="1" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Grid.Row="1" Source="/Imágenes/flecha-hacia-atras.png" Stretch="Fill"                                        />
    </Grid>
</UserControl>


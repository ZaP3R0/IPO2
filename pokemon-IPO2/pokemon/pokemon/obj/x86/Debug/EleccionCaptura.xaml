<UserControl
    x:Class="pokemon.EleccionCaptura"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pokemon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="#FFDC4D4D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="60
                              *"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="89*"/>

            <RowDefinition Height="44*"/>
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="5" Source="/Imágenes/fondoCaptura.jpg" Grid.ColumnSpan="5" Stretch="Fill"/>
        <TextBlock TextWrapping="Wrap" Text="ELIGE UN POKEMON" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="5" Margin="2,0,0,0"/>
        <Image x:ConnectionId='2' x:Name="dragonite" Grid.Row="1" Source="/fotoPokemon/Dragonite.png" Stretch="Fill"                                             Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image x:ConnectionId='3' x:Name="jigglypuff" Grid.Row="3" Source="/fotoPokemon/jigglypuff.png" Stretch="Fill"                                              Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image x:ConnectionId='4' x:Name="gardevoir" Grid.Column="3" Stretch="Fill" Source="/fotoPokemon/gardevoir.png"                                             HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
        <Image x:ConnectionId='5' x:Name="zapdos" Grid.Column="3" Grid.Row="3" Source="/fotoPokemon/Zapdos.png" Stretch="Fill"                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image x:ConnectionId='6' x:Name="pokeball" Grid.Column="2" Grid.Row="2" Source="/Imágenes/pokeball.png" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:ConnectionId='7' x:Name="pokemon_elegido" Grid.Column="1" Grid.Row="4" TextWrapping="Wrap" Text="POKEMON" FontWeight="Bold" Grid.ColumnSpan="4" TextAlignment="Center" Margin="133,4,-1,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:ConnectionId='8' x:Name="but_aceptar" Grid.Column="1" Content="ACEPTAR" Grid.Row="4" FontSize="14" FocusVisualPrimaryBrush="#FF080000" Foreground="Black" Background="White"                       VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="3" Margin="0,4,0,0"/>


    </Grid>
</UserControl>

